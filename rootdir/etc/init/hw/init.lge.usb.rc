#mausb
service mausbueventd /vendor/bin/mausbueventd
    disabled
    oneshot

service mausb_bind /vendor/bin/mausb bind --busid=1-1
    disabled
    oneshot

service mausb_unbind /vendor/bin/mausb unbind --busid=1-1
    disabled
    oneshot

service mausbd /vendor/bin/mausbd
    disabled
    oneshot

service upnp_server /vendor/bin/upnp-server
    disabled
    oneshot

service stop_upnp /system/bin/pkill upnp-server
    disabled
